<div class="container">
  <div class="box col-10">
    <h2>Edit Your Post</h2>
    <%= simple_form_for @post, url: channel_post_path(@channel, @post) do |f|%>
      <%= f.input :title %>
      <br/>
      <%= f.input :description %>
      <%= f.submit 'Confirm', class: 'btn btn-primary make-it-green' %>
    <% end %>
  </div>
</div>
