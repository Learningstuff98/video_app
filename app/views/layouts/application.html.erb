<!DOCTYPE html>
<html>
  <head>
    <title>VideoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/7.5.4/video-js.css" rel="stylesheet">
  </head>

  <body>

    <div id="flex-content-container">
      <nav class="navbar fixed-top navbar-toggleable-md header-color">
        <span class="links">
          <div class="text-center navbar-info">
            <span class="link">
              <a class="fa fa-linkedin-square fa-3x make-it-green" href="https://www.linkedin.com/in/andy-strube-6231ba152/"></a>
            </span>
            <span class="link">
              <a class="fa fa-github-square fa-3x make-it-green" href="https://github.com/Learningstuff98/video_app"></a>
            </span>
            <span class="link">
              <a class="fa fa-file-text fa-3x make-it-green" href="https://docs.google.com/document/d/1qm4nBdIZfsx8zh4IwYvkVuQYclpOXUCVxnC9vV3_eBM/edit"></a>
            </span>
            <div class="homepage_link">
              <h3><%= link_to 'Video App Homepage', root_path, class: "make-it-green" %></h3>
            </div>
            <% if current_user %>
              <div class="make-it-green">
                <%= "Logged in as #{current_user.username}" %>
              </div>
            <% end %>
          </div>
        </span>
      </nav>

      <br/><br/><br/><br/><br/><br/>

      <div class="flash-notice make-it-green page-content">
        <h4 class="notice"><%= notice %></h4>
        <h4 class="alert"><%= alert %></h4>
      </div>

      <%= yield %>
    </div>

  <script src='https://vjs.zencdn.net/7.5.4/video.js'></script>
  <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </body>
</html>
