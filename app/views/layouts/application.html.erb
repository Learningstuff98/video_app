<!DOCTYPE html>
<html>
  <head>
    <title>VideoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar fixed-top navbar-toggleable-md header-color">
        <div id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <span> 
              <span class="nav-item">
                <h3>
                  <%= link_to 'Video App Homepage', root_path, class: "make-it-green" %>
                </h3>
                <div>
                  <% if current_user %>
                    <div class="make-it-green">
                      <%= "Logged in as #{current_user.username}" %>
                    </div>
                  <% end %>
                </div>
              </span>
            </span>
          </ul>
        </div>
      </nav>
      <br/><br/><br/><br/><br/>
      <div class="flash-notice make-it-green page-content">
        <h4 class="notice"><%= notice %></h4>
        <h4 class="alert"><%= alert %></h4>
      </div>
      <%= yield %>
    </div>

    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </body>
</html>
