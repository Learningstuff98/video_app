<h2>Home Page</h2>

<% if !current_user %>
  <h3><%= link_to "Log in", new_user_session_path %></h3>
  <h3><%= link_to "Sign up", new_user_registration_path %></h3>
<% else %>
  <h3><%= "Logged in as #{current_user.username}" %></h3>
  <h3><%= link_to 'Log out', destroy_user_session_path, method: :delete %></h3>
<% end %>
